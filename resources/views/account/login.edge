<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>liversity - Login</title>
        @entryPointStyles('app')
        @entryPointScripts('app')
    </head>
    <body class="container">
        <main>
            <div class="login-page">
                <h1 class="title">Login</h1>
                <label class="new-user-label">É novo usuário? <a href="/SignUp">Então crie uma conta!</a></label>
                <form class="login-form">
                    <div class="mb-3 login-email">
                        <label for="exampleInputEmail1" class="form-label">E-mail</label><br>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3 login-password">
                        <label for="exampleInputPassword1" class="form-label">Senha</label><br>
                        <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <a class="lost-password" href="/ForgotPassword">Esqueci minha senha</a>
                    <a type="submit" class="btn btn-primary submit" href="/Home">Entrar</a>
                </form>
            </div>
        </main>
    </body>
</html>